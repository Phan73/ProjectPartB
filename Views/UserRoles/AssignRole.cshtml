@model AssignRoleViewModel

<h1>Assign Role</h1>

<form asp-action="AssignRole" method="post" class="form-control">
    <div>
        <label for="UserId">User ID:</label>
        <input type="text" id="UserId" name="UserId" value="@Model.UserId" readonly />
    </div>
    <div>
        <label for="UserName">User Name:</label>
        <input type="text" id="UserName" name="UserName" value="@Model.UserName" readonly />
    </div>
    <div>
        <label for="RoleId">Role:</label>
        <select id="RoleId" name="RoleId">
            @foreach (var role in Model.Roles)
            {
                <option value="@role.Id">@role.Name</option>
            }
        </select>
    </div>
    <div>
        <button type="submit">Assign Role</button>
    </div>
</form>
